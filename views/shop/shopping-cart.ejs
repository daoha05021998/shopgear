<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
    <style>
        @media (max-width: 768px) {
            body>div>div:nth-child(1)>div>ul>li {
                font-size: 0rem;
            }

            .navbar-dark .navbar-nav .nav-link {
                color: rgb(0, 0, 0);
                background-color: rgba(255, 255, 255, 0.726);
            }

            .navbar-dark .navbar-nav .nav-link:hover {
                color: red;
            }

            .btn-outline-success {
                background-color: black;
                color: white;
            }

        }
    </style>
</head>
<header>
    <%- include('../partials/header') %>
</header>

<body>
    <div class="container" style="margin-top: 100px;">
        <% if(!products || products.length === 0) { %>
        <div class="row">
            <div class="col-sm">
                <h2>Không có sản phẩm nào được chọn</h2>
                <a name="" id="" class="btn btn-primary" href="/" role="button">Về trang chủ</a>
            </div>
        </div>
        <% } else { %>
        <% if(notification != "") {  %>
        <div class="alert alert-danger fade show" role="alert">
            <strong><%= notification %></strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <% } %>
        <div class="row">
            <div class="col-sm ">
                <strong class="text-danger">*Tổng giá trị trên 500k được free ship</strong>
                <ul class="list-group">
                    <% for(let i = 0; i < products.length ; i++) { %>
                    <li class="list-group-item">
                        <div class="d-flex">
                            <div class="p-2" style="flex-basis: 100px"><img width="50px" height="50px"
                                    src="<%= products[i].item.img %>" alt="">
                            </div>
                            <div class="p-2" style="flex-basis: 400px"><strong><%= products[i].item.name %></strong>
                            </div>
                            <div class="p-2"><span class="label label-success ">Giá:
                                    <%= products[i].price.toLocaleString() %></span>
                            </div>
                            <div class="p-2  order-2"><span
                                    class="badge badge-success float-right mt-2 "><%= products[i].qty %></span></div>
                            <div class="btn-group ml-auto p-2 float-right mr-5 order-1">
                                <a name="" id="" class="btn btn-primary" href="/add/<%= products[i].item._id %>"
                                    role="button">+</a>
                                <a name="" id="" class="btn btn-primary ml-1 mr-1"
                                    href="/reduce/<%= products[i].item._id %>" role="button">-</a>
                                <a name="" id="" class="btn btn-primary" href="/remove/<%= products[i].item._id %>"
                                    role="button">Hủy</a>
                            </div>
                        </div>

                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-sm d-flex">
                <strong class="pt-1 flex-grow-1">Tổng: <%= totalPrice.toLocaleString() %> đ</strong>
                <% if(totalPrice < 500000) { %>
                <strong class="pt-1 ">Phí ship: 40,000 đ</strong>
                <% }else { %>
                <strong class="pt-1 ">Phí ship: Miễn phí</strong>
                <% } %>

            </div>
        </div>
        <hr>
        <div class="col-sm-12 mt-4 ">
            <a name="" id="" class="btn btn-primary btn-lg btn-block" href="order/checkout" role="button">Thanh toán
                Online</a>
        </div>
        <div class="col-sm-12 mt-4 ">
            <a name="" id="" class="btn btn-primary btn-lg btn-block" href="order/cod" role="button">Ship COD</a>
        </div>

        <div class="col-sm-12 mt-4 ">
            <a name="" id="" class="btn btn-danger btn-lg btn-block" href="/" role="button">Tiếp tục mua hàng</a>
        </div>
        <% } %>

    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
</body>

</html>