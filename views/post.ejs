<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('partials/head') %>
    <style>
        .cus-container {
            width: 75% !important;
            margin: auto;
            margin-right: 7%;
        }

        .post-content {
            margin-top: 5vh;
        }

        .image.image_resized {
            display: block;
            box-sizing: border-box;
        }

        .image.image_resized img {
            width: 65vw;
            height: auto;
        }

        div div .card .card-custom:hover {
            opacity: 0.8;
            background-color: black;
            /* color: blue !important; */
        }

        img.card-img-top:hover {
            opacity: 0.7 !important;
        }

        .title {
            background-color: red;
            text-align: center;
        }

        .card-body .card-title {
            font-size: 1.2rem;
        }

        .new-product-percent {
            background: url("../images/icon-saleoff.png") no-repeat scroll center center transparent;
            position: absolute;
            width: 48px;
            height: 51px;
            bottom: 65px;
            right: 30px;
            text-align: center;
            vertical-align: middle;
            color: #180733;
            font-size: 16px;
            padding-top: 14px;
        }

        span.ico-product.ico-new {
            position: absolute;
            top: 15px;
            left: 15px;
            padding: 5px 16px;
            background: rgb(211, 21, 21);
            color: #FFF;
            font-weight: bold;
            font-size: 0.75rem;
        }

        #myBtn {
            display: none;
            position: fixed;
            bottom: 20px;
            right: 30px;
            z-index: 99;
            font-size: 18px;
            border: none;
            outline: none;
            background-image: url(/assets/img/arrow.svg);
            color: rgb(40, 110, 190);
            cursor: pointer;
            padding: 20px;
            border-radius: 50%;
        }
    </style>
</head>

<body>
    <header>
        <%- include('partials/header') %>
    </header>
    <% let time = new Date(); let d = time.getDate(); let m =time.getMonth(); y = time.getFullYear() %>

    <div class="cus-container">

        <div class="title d-flex align-items-center">
            <h2>Hot Sale</h2>
            <h3 class="ml-auto" style="font-size: 1.2rem; color: black;"><a href="/hotsale">Xem ThÃªm</a></h3>
        </div>
        <div class="post-content">
            <%- post[0].content %>
        </div>
    </div>
    <button onclick="topFunction()" id="myBtn" title="Go to top"></button>
    <script>
        const mybutton = document.getElementById("myBtn");

        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () { scrollFunction() };
        const x = screen.height;
        console.log(x)
        function scrollFunction() {
            if (document.body.scrollTop > x / 2 || document.documentElement.scrollTop > x / 2) {
                mybutton.style.display = "block";
            } else {
                mybutton.style.display = "none";
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>
</body>

</html>