<!doctype html>
<html lang="en">

<head>
  <title>Đăng nhập</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <style>
    html,
    body {
      height: 100%;
      background-color: black;
    }

    body {
      display: -ms-flexbox;
      display: flex;
      -ms-flex-align: center;
      align-items: center;
      padding-top: 40px;
      padding-bottom: 40px;
    }

    .form-signin {
      width: 100%;
      max-width: 330px;
      padding: 15px;
      margin: auto;
    }

    .form-signin .checkbox {
      font-weight: 400;
    }

    .form-signin .form-control {
      position: relative;
      box-sizing: border-box;
      height: auto;
      padding: 10px;
      font-size: 16px;
    }

    .form-signin .form-control:focus {
      z-index: 2;
    }

    .form-signin input[type="email"] {
      margin-bottom: -1px;
      border-bottom-right-radius: 0;
      border-bottom-left-radius: 0;
    }

    .form-signin input[type="password"] {
      margin-bottom: 10px;
      border-top-left-radius: 0;
      border-top-right-radius: 0;
    }

    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }
  </style>
</head>

<body class="text-center">
  <form class="form-signin form-group" action="/users/login" method="post">
    <img class="mb-4" src="../../images/logo.svg" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal" style="color:aliceblue;">Xin chào! Vui lòng đăng nhập!</h1>
    <% if(hasErrors) {%>
    <div class="alert alert-danger">
      <% for(let i = 0; i < messages.length; i++) {%>
      <%= messages[i]%>
      <% } %>
    </div>
    <% } %>
    <label for="inputEmail" class="sr-only">Địa chỉ email của bạn</label>
    <input type="email" id="inputEmail" autocomplete="username" name="email" class="form-control"
      placeholder="Địa chỉ email" required autofocus>
    <label for="inputPassword" class="sr-only">Mật khẩu</label>
    <input type="password" id="inputPassword" autocomplete="new-password" name="password" pattern=".{6,}"
      class="form-control" placeholder="Mật khẩu" required>
    <div class="checkbox mb-3">
      <label style="color:aliceblue;" hidden>
        <input type="checkbox" value="remember-me"> Nhớ mật khẩu
      </label>
    </div>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button class="btn btn-lg btn-primary btn-block" type="submit">Đăng nhập</button>
    <a class="btn btn-primary btn-lg btn-block" href="register" role="button">Tạo tài khoản mới</a>
    <p class="mt-5 mb-3 text-muted">&copy; <% let year = new Date().getFullYear() %><%= year + ' - ' + (year + 1) %> </p>
  </form>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
    crossorigin="anonymous"></script>
</body>

</html>