<!DOCTYPE html>
<html lang="en">

<head>
    <title>Thêm Nhân viên</title>
    <%- include('../../partials/headDashboard') %>

</head>

<body class="">
    <div class="wrapper ">

        <%- include('../../partials/sidebarDashboard')%>

        <div class="main-panel">
            <!-- Navbar -->

            <%- include('../../partials/navDashboard')%>

            <!-- End Navbar -->

            <div class="content">
                <h3>Thêm nhân viên</h3>
                <div class="container">
                    <% if(notification != "") {  %>
                    <div class="alert alert-danger fade show" role="alert">
                        <strong><%= notification %></strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <% } %>
                    <form action="/admin/addStaff" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName">Họ</label>
                                <input type="text" class="form-control" id="firstName" name="firstName" placeholder=""
                                    value="" required>
                                <div class="invalid-feedback">
                                    Yêu cầu Họ
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName">Tên</label>
                                <input type="text" class="form-control" id="lastName" name="lastName" placeholder=""
                                    value="" required>
                                <div class="invalid-feedback">
                                    Yêu cầu tên
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="email">Email </label>
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder="you@example.com" required>
                            <div class="invalid-feedback">
                                Nhập địa chỉ email của nhân viên
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="role">Quyền: </label>
                            <select class="form-control" id="role" name="role" required>
                                <% if(role == 'admin') {%>
                                <option value="manager">Quản lý</option>
                                <option value="staff">Nhân viên</option>
                                <% }else{ %>
                                <option value="staff">Nhân viên</option>
                                <% } %>

                            </select>
                            <div class="invalid-feedback">
                                Chọn quyền cho nhân viên!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password">Mật khẩu</label>
                            <div class="input-group">

                                <input type="password" class="form-control" id="password" name="password"
                                    pattern=".{6,}" placeholder="Password (6 characters minimum)" required>
                                <div class="invalid-feedback" style="width: 100%;">
                                    Nhập mật khẩu của nhân viên
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password1">Nhập lại mật khẩu</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password1" name="password1"
                                    pattern=".{6,}" placeholder="Confirm Password" required>
                                <div class="invalid-feedback" style="width: 100%;">
                                    Mật khẩu không khớp
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="phone-number">Số điện thoại</label>
                            <input type="number" class="form-control" id="phone-number" name="pnumber"
                                placeholder="+84376214088" required>
                            <div class="invalid-feedback">
                                Nhập số điện thoại của nhân viên
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="address">Địa chỉ</label>
                            <input type="text" class="form-control" id="address" name="address"
                                placeholder="Quoc Oai, Ha Noi" required>
                            <div class="invalid-feedback">
                                Nhập địa chỉ nhân viên của bạn
                            </div>
                        </div>
                        <hr class="mb-4">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button id="btnRegister" class="btn btn-primary btn-lg btn-block" type="submit">Tạo tài
                            khoản</button>
                        <a class="btn btn-primary btn-lg btn-block" href="/admin/addStaff" role="button">Hủy</a>
                    </form>
                </div>
            </div>

            <%- include('../../partials/footerDashboard') %>

        </div>
    </div>

    <!--   Core JS Files   -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>

    

    <script src="/assets/js/plugins/bootstrap-notify.js"></script>
    <!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="/assets/js/paper-dashboard.min.js?v=2.0.0" type="text/javascript"></script>
    <!-- Paper Dashboard DEMO methods, don't include it in your project! -->
    <script src="/assets/demo/demo.js"></script>
</body>

</html>